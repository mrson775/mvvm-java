<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="@dimen/dimen_line" android:color="@color/grey_ccc" />
                    <solid android:width="0.1dp" android:color="?attr/color_vulcan" />
                    <corners android:radius="4dp" />
                    <padding android:bottom="7dp" android:left="5dp" android:right="5dp" android:top="3dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="bottom|right" android:src="?attr/ic_down" />
            </item>
        </layer-list>
    </item>

</selector>