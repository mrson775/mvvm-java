<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- App theme -->
    <style name="AppTheme" parent="Base.AppTheme.Light"></style>

    <style name="LightTheme" parent="Base.AppTheme.Light"></style>
    <!-- Base light theme containing all styles -->
    <style name="Base.AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        //style of menu icon
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        //
        <item name="android:textColor">?attr/text_color</item>
        <item name="text_color">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="colorPrimary">@color/primary_color_light</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:alertDialogTheme">@style/DialogTheme</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">?attr/primary_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/fab_normal</item>
        <item name="colorSecondaryVariant">@color/fab_pressed</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="ic_person">@drawable/ic_person_black</item>
        <item name="ic_power">@drawable/ic_power_black</item>
        <item name="ic_back">@drawable/ic_back_black</item>
        <item name="ic_comment">@drawable/ic_comment_black</item>
        <item name="ic_clock">@drawable/ic_clock_black</item>
        <item name="ic_key">@drawable/ic_key_black</item>
        <item name="ic_empty">@drawable/ic_empty_black</item>
        <item name="ic_photo">@drawable/ic_photo_black</item>
        <item name="ic_video">@drawable/ic_video_black</item>
        <item name="ic_pdf">@drawable/ic_pdf_black</item>
        <item name="ic_file">@drawable/ic_file_black</item>
        <item name="color_vulcan">@color/white</item>
        <item name="color_highlight">@color/grey_ccc</item>
        <item name="primary_color">@color/primary_color_light</item>
        <item name="primary_icon_color">@color/primary_color_dark</item>
        <item name="ic_micro">@drawable/ic_microphone_black</item>
        <item name="ic_down">@drawable/ic_down_black</item>
        <item name="ic_camera">@drawable/ic_camera_black</item>
        <item name="ic_record_video">@drawable/ic_record_video_black</item>
        <item name="ic_pen">@drawable/ic_pen_black</item>
        <item name="ic_location">@drawable/highlight_location_light</item>
    </style>
    <!-- Use this to switch to Dark theme -->
    <style name="DarkTheme" parent="Base.AppTheme.Dark"></style>

    <style name="Base.AppTheme.Dark" parent="@style/Theme.AppCompat.NoActionBar">
        //style of menu icon
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        //
        <item name="android:textColor">?attr/text_color</item>
        <item name="text_color">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="colorPrimary">@color/primary_color_dark</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
        <item name="android:alertDialogTheme">@style/DialogTheme</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">?attr/primary_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/fab_normal</item>
        <item name="colorSecondaryVariant">@color/fab_pressed</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="ic_person">@drawable/ic_person_white</item>
        <item name="ic_power">@drawable/ic_power_white</item>
        <item name="ic_back">@drawable/ic_back_white</item>
        <item name="ic_comment">@drawable/ic_comment_white</item>
        <item name="ic_clock">@drawable/ic_clock_white</item>
        <item name="ic_key">@drawable/ic_key_white</item>
        <item name="ic_empty">@drawable/ic_empty_white</item>
        <item name="ic_photo">@drawable/ic_photo_white</item>
        <item name="ic_video">@drawable/ic_video_white</item>
        <item name="ic_pdf">@drawable/ic_pdf_white</item>
        <item name="ic_file">@drawable/ic_file_white</item>
        <item name="color_vulcan">@color/line_vulcan</item>
        <item name="color_highlight">@color/grey_ccc</item>
        <item name="primary_color">@color/primary_color_dark</item>
        <item name="primary_icon_color">@color/white</item>
        <item name="ic_micro">@drawable/ic_microphone_white</item>
        <item name="ic_down">@drawable/ic_down_white</item>
        <item name="ic_camera">@drawable/ic_camera_white</item>
        <item name="ic_record_video">@drawable/ic_record_video_white</item>
        <item name="ic_pen">@drawable/ic_pen_white</item>
        <item name="ic_location">@drawable/highlight_location_dark</item>
    </style>

    <style name="BaseToolbarTheme">
        <item name="colorControlNormal">?attr/color_highlight</item>
        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">?attr/color_highlight</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">?attr/primary_icon_color</item>
    </style>
    <!-- Dialog theme -->
    <style name="DialogTheme" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle_Holo</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <style name="DialogWindowTitle_Holo">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.DialogWindowTitle
        </item>
    </style>

    <style name="ProgressDialogTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomProgressDialogStyle</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="CustomProgressDialogStyle">
        <item name="android:bottomBright">@color/transparent</item>
        <item name="android:bottomDark">@color/transparent</item>
        <item name="android:bottomMedium">@color/transparent</item>
        <item name="android:centerBright">@color/transparent</item>
        <item name="android:centerDark">@color/transparent</item>
        <item name="android:centerMedium">@color/transparent</item>
        <item name="android:fullBright">@color/transparent</item>
        <item name="android:fullDark">@color/transparent</item>
        <item name="android:topBright">@color/transparent</item>
        <item name="android:topDark">@color/transparent</item>
    </style>

    <style name="ProgressHUD" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>